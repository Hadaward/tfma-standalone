{
  "name": "TransformiceAdventures",
  "version": "1.0.2",
  "license": "MIT",
  "description": "An unofficial standalone developed in NodeJS for the game Transformice Adventures.",
  "author": {
    "name": "Hadawardgz",
    "email": "eduardo.gimenez07@gmail.com"
  },
  "homepage": "https://github.com/Hadaward/tfma-standalone",
  "main": "application.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "pack": "build --dir",
    "dist-win64": "electron-builder --win --x64",
    "dist-win32": "electron-builder --win --ia32",
    "dist-linux64": "electron-builder --linux --x64",
    "dist-linux32": "electron-builder --linux --ia32"
  },
  "build": {
    "asar": false,
    "appId": "com.hadaward.tfmadv_standalone",
    "linux": {
      "target": [
        "deb"
      ],
	  "icon": "ressources/souris.png"
    },
    "win": {
      "target": "NSIS",
      "icon": "ressources/souris.ico"
    }
  },
  "dependencies": {
    "portscanner": "^2.2.0",
    "request": "^2.88.2"
  },
  "devDependencies": {
    "electron": "^11.2.1",
    "electron-builder": "^22.9.1"
  }
}
